    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        var i=0;
        var j=1;
        $( function() {
            $( "#datepicker" ).datepicker({changeMonth: true,
                changeYear: true,
                yearRange: '1980:2017',
                showButtonPanel: true
            });
            $( "#datepicker2" ).datepicker({changeMonth: true,
                changeYear: true,
                yearRange: '1980:2017',
                showButtonPanel: true
            });
            $('#TeachingInfo').click(function () {
                var x="<hr>Adding Detail No "+j+"<br><label for='Branch'>Branch</label><input list='Branch' class='form-control' name='BranchName'><datalist id='Branch'><option value='CS'> <option value='IT'><option value='ECE'></datalist>";
